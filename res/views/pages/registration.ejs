<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
    <title>Registration</title>
</head>

<body>
<div id="registration" class="section">
    <div class="section-center">
        <div class="container">
            <div class="row">
                <div class="booking-form">
                    <div class="form-header">
                        <h1>Register</h1>
                    </div>
                    <form>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">FirstName</label>
                                    <input class="form-control" type="text" required>
                                    <span class="form-label"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">LastName</label>
                                    <input class="form-control" type="text" required>
                                    <span class="form-label"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">Email</label>
                                    <input class="form-control" type="email" required>
                                    <span class="form-label"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">Phone no</label>
                                    <input class="form-control" type="text" required>
                                    <span class="form-label"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">Date of birth</label>
                                    <input class="form-control" type="date" required>

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="labela">Username</label>
                                    <input class="form-control" type="text" required>
                                    <span class="form-label"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-btn">
                            <button class="submit-btn">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>

</html>